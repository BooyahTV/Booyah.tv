{
	"name": "BOOYAH.tv",
	"version": "0.1.5",
	"description": "Emotes de twitch.tv/betterttv/FrankerFaceZ para booyah.live",
	"manifest_version": 2,

	"permissions": ["activeTab","tabs"],
	"icons": { 
		"16": "16.png",
		"48": "48.png",
	   "128": "128.png" 
	},
	"content_scripts": [
		{
			"css": ["styles.css"],
			"js": ["jquery.min.js", "emotes.js"],
			"matches": ["https://booyah.live/channels/*"]
		}
	],
	"browser_action": {
		"default_icon": "128.png",
		"default_popup": "popup.html"
	},
	"web_accessible_resources": ["icons/emote-icon.png","icons/twitch.svg"],
	"background": {
		"scripts":["background.js"]
	}
}
